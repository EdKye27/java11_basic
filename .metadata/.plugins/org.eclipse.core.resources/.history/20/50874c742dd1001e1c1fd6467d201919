package org.KH.app2;
//반복문 : for, while, do~while
public class Loop1 {

	public static void main(String[] args) {
		/*
		n 값을 10번 더하려면..
		
		int n = 0;
		n = n + 1;
		n = n + 1;
		n = n + 1;
		n = n + 1;
		n = n + 1;
		n = n + 1;
		n = n + 1;
		n = n + 1;
		n = n + 1;
		n = n + 1;
		
		System.out.println("n 값은? : "+n);	//n 값은? : 10 으로 출력된다
		*/
		
		/*
		for 문 익혀보기		:	조건식이 참 일때 동안 반복수행 한다
		for(초기식;조건식;증감식) { 반복해야할 문장; }
		 */
		
//		int n = 0;
//		for(int i=0; i<10; i++ ) {	
//			n = n + 1;
//		}
//		
//		System.out.println("n 값은? : "+n);
		
		//배열 개념 알아가기
		int[] nums = {80,95,75,60,100,65,82,15,37,100};	// 배열 : 변수에 여러 값 넣기
		String names[] = {"김","이","박","최","정","오","배","강","장","계"};
		int tot = 0;
		
		System.out.println("nums : ");
		for (int i = 0; i < nums.length; i++) {
		    System.out.print(nums[i] + " ");
		}
		
		System.out.println("/n names : "+"\n\n");
		for (int i = 0; i < nums.length; i++) {
		    System.out.print(names[i] + " ");
		}
		

		System.out.println("\n이름\t점수\t학점");
		


		for(int i=0;i<10;i++) {
			tot += nums[i]; 		//tot = tot + nums[i]
			System.out.print(names[i]+"\t");
			System.out.println(nums[i]+"\t");
			
			if(nums[i]>=90) {
				System.out.println("A\t\n");
			} else if(nums[i]>=80) {
				System.out.println("B\t\n");
			} else if(nums[i]>=70) {
				System.out.println("C\t\n");
			} else if(nums[i]>=60) {
				System.out.println("D\t\n");
			} else {
				System.out.println("F\t\n");
			}
			
		}
		
		System.out.println("전체 총점 : "+tot);
		System.out.println("평균 : "+(tot/10.00f));
	}

}
